{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "commonjs",                     
    "allowJs": true,                       
    "removeComments": true,                
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
